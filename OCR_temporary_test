        }

        button:hover {
            background: #005a87;
        }

        .result {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 5px;
            margin-top: 20px;
            border-left: 4px solid #007cba;
        }

        .extracted-text {
            background: white;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            white-space: pre-wrap;
            font-family: monospace;
            max-height: 300px;
            overflow-y: auto;
        }

        .debug-info {
            background: #f1f1f1;
            padding: 10px;
            border-radius: 5px;
            font-size: 0.9rem;
            margin: 10px 0;
        }
    </style>
